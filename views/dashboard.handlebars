{{>logged-header}}

<div class="container-fluid">
    {{#each postsData as |post|}}
        <div id="{{post.id}}" class="post-dashboard post-format row p-2 m-4">
            <h5 class="col-3 text-center">{{post.title}}</h5>
            <h6 class="col-9 text-center">Posted on {{post.date_created}}</h6>
        </div>
    {{/each}}
    <div class="row text-center mt-5">
        <button id="create-post">+ New Post</button>
    </div>
</div>


<script src="/js/dashboard.js"></script>