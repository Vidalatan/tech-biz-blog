{{#if req.session.loggedIn}}
    {{>logged-header}}
{{else}}
    {{>stnd-header}}
{{/if}}

<div class="container-fluid mt-5">
    {{#each postsData as |post|}}
        <div id="{{post.id}}" class="post-format container text-center px-0 mb-4">
            <h3 class="py-3"> {{post.title}} </h3>
            <h5> Posted by '{{post.user.username}}' on {{post.date_created}}</h5>
            <div class="post-divider-full mb-4"></div>
            <div class="px-2">
                <p class="justify-content-center p-4"> {{post.content}} </p>
            </div>
        </div>
    {{/each}}
</div>

<script src="/js/script.js"></script>