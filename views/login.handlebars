{{>stnd-header}}

<div class="container-fluid mt-5">
  <div class="row mb-5">
    <h2 class="col text-center my-3">Login</h2>
    <form class="form login-form col-12 text-center">
      <div class="form-group mb-4">
        <label for="username-login">Username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group mb-4">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-outline-light" type="submit">Login</button>
      </div>
    </form>
  </div>

  <div class="row">
    <h2 class="col text-center mb-3">Signup</h2>
    <form class="form signup-form col-12 text-center">
      <div class="form-group mb-4">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group mb-4">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group mb-4">
        <label for="password-signup">Confirm Password:</label>
        <input class="form-input" type="password" id="confirm-password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-outline-light" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>